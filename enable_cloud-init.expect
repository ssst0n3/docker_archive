#!/usr/bin/expect -f
set timeout -1
spawn qemu-system-x86_64 \
    -hda ubuntu-server-cloudimg.img \
    -nographic \
    -smp 2 \
    -m 2048M

expect -re {Cloud-init v. 20.3-2-g371b392c-0ubuntu1~20.04.1 finished at}

send "\r"
expect "login:"
send "root\r"
expect "assword:"
send "root\r"
expect "#"
send "rm /etc/cloud/cloud-init.disabled\r"
expect "#"
send "shutdown now \r"

interact
