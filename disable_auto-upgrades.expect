#!/usr/bin/expect -f
set timeout -1
spawn qemu-system-x86_64 \
    -hda ubuntu-server-cloudimg.img \
    -nographic \
    -smp 2 \
    -m 2048M

send "\r"
expect "login:"
send "root\r"
expect "assword:"
send "root\r"
expect "#"
send "sed -i s/1/0/g /etc/apt/apt.conf.d/20auto-upgrades\r"
expect "#"
send "shutdown now \r"

interact