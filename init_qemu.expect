#!/usr/bin/expect -f
set timeout -1
spawn qemu-system-x86_64 \
    -hda ubuntu-server-cloudimg.img \
    -hdb cloud.img \
    -nographic \
    -smp 2 \
    -m 2048M

# expect -re {Reached target.*Cloud-init target.*\.}
expect -re {"/init.sh complete"}

send "\r"
expect "login:"
send "root\r"
expect "assword:"
send "root\r"
expect "#"
send "shutdown now \r"

interact